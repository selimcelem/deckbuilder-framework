# --- Unity Linguist Configuration ---

# Ignore Unity YAML-based files
*.meta linguist-detectable=false
*.unity linguist-detectable=false
*.asset linguist-detectable=false
*.prefab linguist-detectable=false
*.mat linguist-detectable=false
*.anim linguist-detectable=false
*.controller linguist-detectable=false
*.overrideController linguist-detectable=false
*.shadergraph linguist-detectable=false
*.physicMaterial linguist-detectable=false

# Ignore Unity config and package folders
ProjectSettings/** linguist-detectable=false
Packages/** linguist-detectable=false
Library/** linguist-detectable=false
Logs/** linguist-detectable=false
UserSettings/** linguist-detectable=false

# Ignore non-code assets
Assets/_Project/Art/** linguist-detectable=false
Assets/_Project/Audio/** linguist-detectable=false
Assets/_Project/ScriptableObjects/** linguist-detectable=false

# Force C# recognition
*.cs linguist-language=C#

# Ignore docs and misc
*.md linguist-detectable=false
*.txt linguist-detectable=false
